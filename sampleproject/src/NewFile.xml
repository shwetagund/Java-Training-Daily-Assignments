<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
 
    <!-- bean definitions here -->
    <bean class="sampleproject.Employe" name="emp123">
    <property name="empID"    value="80001"></property>           <!-- injecting data -->
    <property name="name"       value="Jhon Weak"></property>
    <property name="address"  value="Kolhapur"></property>
    <property name="phone"       value="123456"></property>
    <property name="salaryPaid"   value="true"></property>
    </bean>
    
</beans>